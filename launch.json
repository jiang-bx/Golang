    "configurations": [
        {
            "type": "go",
            "request": "launch",
            "name": "Debug current file",
            "mode": "debug",
            "program": "${file}",
            "args": ["--check-go-version=false"],
            // 指定使用集成终端
            "console": "integratedTerminal",
            // 指定在调试会话开始时打开终端
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
